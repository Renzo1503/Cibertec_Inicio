@model IEnumerable<WebDeveloper.Model.Product>
@using WebDeveloper.Helpers

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@helper DisplayPriceRazor(double price){
    if (@price == 0.0)
    {
            <span>Free!!!</span>
    }
    else
    {
            <span>@price</span>
    }
}

<h2>Product</h2>
<ul>
    @foreach (var product in Model)
    {
        <li>
            @*primera forma*@
            <span>Razor: @product.Description:</span>
            @DisplayPriceRazor(product.Price)
            @*<div>
                @CustomHelper.DisplayPriceStatic(item.Price)
            </div>
            <div>
                @Html.DisplayPriceExtension(item.Price)
            </div>*@
            <div>
                Static: @CustomHelper.DisplayDateOrNullStatic(product.CreateDate)
            </div>
            <div>
                Extension: @Html.DisplayDateOrNullExtension(product.CreateDate)
            </div>
        </li>
    }
</ul>
